<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.employeemanagement.HelloController" styleClass="home-container">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to Employee Management System" styleClass="welcome-text">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    
    <Label text="Manage your employees efficiently" styleClass="subtitle-text">
        <font>
            <Font name="System" size="16.0"/>
        </font>
    </Label>

    <Button text="Go to Employee Management" onAction="#goToEmployeeManagement" styleClass="nav-button">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Button>
</VBox>
